.c-card
  .js-category-list.c-card__list
    each work in works
      article.c-card__item(data-category=work.category)
        p.c-card__head #{work.title}
        ul.c-card__desc
          if work.design
            li.c-card__desc-item Design : #{work.design}
          if work.coding
            li.c-card__desc-item Coding : #{work.coding}
        figure.c-card__img: img(src=`/assets/img/work/${work.img}`, alt="")
        p.c-card__btn.c-button.c-button-radius
          a.c-button-radius__text(href=work.link) View
